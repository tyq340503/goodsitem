<div id="myCarousel" class="carousel slide"  style="width: 18em;">
	<!-- 轮播（Carousel）指标 -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
	</ol>   
	<!-- 轮播（Carousel）项目 -->
	<div class="carousel-inner">
		<div class="item active">
			<img src="<%= restaurants[1].image %>" alt="First slide"  style="height: 15em;width: 18em;">
			<div class="carousel-caption"><%= restaurants[1].description %></div>
        </div>
		<div class="item">
			<img src="<%= restaurants[2].image %>" alt="Second slide"  style="height: 15em;width: 18em;">
			<div class="carousel-caption"><%= restaurants[2].description %></div>
		</div>
		<div class="item">
			<img src="<%= restaurants[3].image %>" alt="Third slide"  style="height: 15em;width: 18em;">
			<div class="carousel-caption"><%= restaurants[3].description %></div>
		</div>
	</div>
	<!-- 轮播（Carousel）导航 -->
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
	    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	    <span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
	    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	    <span class="sr-only">Next</span>
	</a>
</div> 